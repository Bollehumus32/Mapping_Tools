<UserControl x:Class="Mapping_Tools.Components.Graph.Anchor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mapping_Tools.Components.Graph"
             mc:Ignorable="d"
             MouseLeftButtonDown="ThisLeftMouseDown"
             MouseRightButtonDown="ThisMouseRightButtonDown"
             MouseUp="ThisMouseUp"
             MouseMove="ThisMouseMove">
    <Grid>
        <Rectangle x:Name="rect" Fill="#AAAAAA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Border BorderThickness="1" BorderBrush="Black"/>
    </Grid>
</UserControl>
